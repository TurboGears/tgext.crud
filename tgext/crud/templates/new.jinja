{% extends "master.jinja" %}

{% block master_title %}
{{ tmpl_context.title }} - New {{ model }}
{% endblock %}

{% block master_head %}
<style>
    {{ tmpl_context.crud_style|safe }}
</style>
{% endblock %}

{% block contents %}
    <div id="crud_leftbar">
        {% if tmpl_context.menu_items is defined %}
        <ul id="menu_items">
            {% for lower, item in tmpl_context.menu_items.iteritems()|sort %}
            <li><a href="{{ tmpl_context.crud_helpers.make_link(lower) }}">{{ item }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}
    </div>
  <div id="crud_content">
      <div class="crud_add">
        <h2>New {{ model }}</h2>
         {{ tmpl_context.widget(value=value, action='./')|safe }}
      </div>
  </div>
  <div style="clear:both;"/>
{% endblock %}